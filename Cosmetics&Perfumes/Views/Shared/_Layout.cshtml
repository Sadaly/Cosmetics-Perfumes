<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="~/css/bootstrap.css" rel="stylesheet" type="text/css"/>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
</head>
<body class="min-vh-100 position-relative">
    <header class="d-flex flex-wrap justify-content-center py-3 mb-4 border-bottom" style="padding: 2rem;">
        <a href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto link-body-emphasis text-decoration-none">
            <i class="bi-shop" style="font-size: 2rem; color: black;"></i>
            <span class="fs-4">Cosmetics&Perfumes</span>
        </a>

        <ul class="nav nav-pills">
            <li class="nav-item"><a href="/" class="nav-link active" aria-current="page">Главная</a></li>
            <li class="nav-item"><a href="/products" class="nav-link">Каталог</a></li>
            <li class="nav-item"><a href="/cart" class="nav-link">Корзина</a></li>
        </ul>
    </header>
    <div class="container mt-5">
        @RenderBody()
    </div>
    <footer class="vw-100 d-flex flex-wrap justify-content-between align-items-center py-3 border-top position-absolute bottom-0" style="padding: 2rem;">
        <div class="col-md-4 d-flex align-items-center">
            <a href="/" class="mb-3 me-2 mb-md-0 text-body-secondary text-decoration-none lh-1">
                <i class="bi-bootstrap" style="font-size: 2rem; color: black;"></i>
            </a>
            <span class="mb-3 mb-md-0 text-body-secondary">© 2024 Company, Inc</span>
        </div>

        <ul class="nav col-md-4 justify-content-end list-unstyled d-flex">
            <li class="ms-3"><a class="text-body-secondary" href="#"><i class="bi-twitter-x" style="font-size: 2rem; color: black;"></i></a></li>
            <li class="ms-3"><a class="text-body-secondary" href="#"><i class="bi-instagram" style="font-size: 2rem; color: black;"></i></a></li>
            <li class="ms-3"><a class="text-body-secondary" href="#"><i class="bi-facebook"  style="font-size: 2rem; color: black;"></i></a></li>
        </ul>
    </footer>
    <script type="text/javascript" src="~/js/bootstrap.bundle.js"></script>
</body>
</html>
